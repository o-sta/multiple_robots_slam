<launch>
    <arg name="robot_name" default="robot1"/>
   <group ns="$(arg robot_name)">
  <!-- 3D sensor -->
  <arg name="3d_sensor" default="$(env TURTLEBOT_3D_SENSOR)"/>  <!-- r200, kinect, asus_xtion_pro -->
  <include file="$(find multi_turtlebot_launch)/launch/gmapping/includes/3dsensor.launch.xml">
    <arg name="robot_name" value="$(arg robot_name)"/>
    <arg name="rgb_processing" value="false" />
    <arg name="depth_registration" value="false" />
    <arg name="depth_processing" value="false" />
    
    <!-- We must specify an absolute topic name because if not it will be prefixed by "$(arg camera)".
         Probably is a bug in the nodelet manager: https://github.com/ros/nodelet_core/issues/7 --> 
    <arg name="scan_topic" value="scan" />
  </include>

  <!-- Gmapping -->
  <arg name="custom_gmapping_launch_file" default="$(find multi_turtlebot_launch)/launch/gmapping/includes/$(arg 3d_sensor)_gmapping.launch.xml"/>
  <include file="$(arg custom_gmapping_launch_file)">
	<arg name="robot_name" value="$(arg robot_name)"/>
  </include>

  <!-- Move base -->
  <include file="$(find multi_turtlebot_launch)/launch/gmapping/includes/move_base.launch.xml">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>

  <node pkg="robot_pose_publisher" type="robot_pose_publisher" name="robot_pose_publisher">
    <param name="map_frame" value="$(arg robot_name)/map"/>
    <param name="base_frame" value="$(arg robot_name)/base_link"/>
    <param name="is_stamped" value="true"/>
  </node>

  </group>

</launch>
